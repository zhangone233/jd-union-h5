{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 120,
  "proseWrap": "never",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.{js,ts}",
      "options": {
        "printWidth": 70,
        "jsxBracketSameLine": false,
        "endOfLine": "cr"
      }
    },
    {
      "files": "*.{jsx,tsx}",
      "options": {
        "jsxBracketSameLine": false,
        "singleAttributePerLine": true,
        "endOfLine": "cr"
      }
    }
  ]
}
